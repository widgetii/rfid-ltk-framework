<?xml version="1.0" encoding="UTF-8"?>

<blueprint
  xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
    http://www.osgi.org/xmlns/blueprint/v1.0.0
    http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

  <reference-list
    id="rfProviders"
    interface="ru.aplix.ltk.core.RfProvider"
    activation="eager"
    availability="optional">
    <reference-listener
      ref="rfStore"
      bind-method="providerAdded"
      unbind-method="providerRemoved"/>
  </reference-list>

  <reference id="log" interface="org.osgi.service.log.LogService"/>

  <service ref="rfStore" interface="ru.aplix.ltk.store.RfStore"/>

</blueprint>

