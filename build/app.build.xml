<?xml version="1.0" encoding="UTF-8"?>

<project
	xmlns:ivy="antlib:org.apache.ivy.ant"
	name="ru.aplix.ltk.build.app">

	<import file="setup.build.xml"/>

	<property name="ivy.file" value="${basedir}/ivy.xml"/>
	<property name="app.dir" value="${basedir}/target"/>

	<ivy:settings file="${root.dir}/ivysettings.xml"/>
	
	<target name="build-deps">
		<ivy:buildlist
			taskname="${ant.project.name}"
			reference="deps.path"
			root="${ant.project.name}"
			excluderoot="true">
			<fileset dir="." includes="build.xml"/>
			<fileset dir="${root.dir}" includes="*/build.xml"/>
		</ivy:buildlist>
		<subant target="package" buildpathref="deps.path">
			<property name="without-deps" location="on"/>
		</subant>
	</target>

	<target name="_find_profile">
		<property name="profile" value="default"/>
		<available
			taskname="${ant.project.name}"
			file="local/${profile}"
			type="dir"
			property="profile.dir"
			value="local/${profile}"/>
		<available
			taskname="${ant.project.name}"
			file="profiles/${profile}"
			type="dir"
			property="profile.dir"
			value="profiles/${profile}"/>
		<fail
			message="Build profile '${profile} not found neither in `profiles`, nor in `local`"
			unless="profile.dir"/>
	</target>

	<target name="_prepare">
		<mkdir taskname="${ant.project.name}" dir="${app.dir}"/>
	</target>

	<target
		name="_profile_resources"
		depends="_find_profile,_prepare"
		if="profile.dir">
		<copy
			taskname="${ant.project.name}"
			todir="${app.dir}"
			overwrite="true">
			<fileset dir="${profile.dir}"/>
		</copy>
	</target>

	<target name="_default_resources" depends="_prepare">
		<copy
			taskname="${ant.project.name}"
			todir="${app.dir}"
			overwrite="false">
			<fileset dir=".">
				<include name="configuration/**"/>
			</fileset>
		</copy>
	</target>

	<target name="resources" depends="_profile_resources,_default_resources"/>

	<target name="build" depends="build-deps,resources">
		<ivy:retrieve
			taskname="${ant.project.name}"
			sync="true"
			pattern="${app.dir}/plugins/[artifact]_[revision].[ext]"
			type="jar"/>
	</target>

	<target name="clean" description="Cleans everything">
		<delete
			taskname="${ant.project.name}"
			includeemptydirs="true"
			dir="${app.dir}"/>
	</target>

</project>
